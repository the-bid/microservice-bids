{
  "name": "the-bid-bids",
  "version": "0.1.0",
  "description": "This is a microservice accociated with The Bid that handles bids",
  "main": "index.js",
  "scripts": {
    "lint": "eslint . --fix --ignore-path .gitignore --ignore-pattern '!.eslintrc.js'",
    "test": "npm run lint && npm run unit",
    "unit": "jest",
    "coverage": "jest --coverage",
    "start": "nodemon -r dotenv/config src/index.js",
    "start:prod": "node src/index.js",
    "deploy:db": "prisma deploy -e .env",
    "start:db": "docker-compose -f deployment/docker-compose.yml up -d",
    "stop:db": "docker-compose -f deployment/docker-compose.yml stop"
  },
  "author": "bialesdaniel@gmail.com",
  "license": "MIT",
  "dependencies": {
    "decimal.js": "^10.1.1",
    "graphql-yoga": "^2.0.0",
    "jsonwebtoken": "^8.5.1",
    "lodash": "^4.17.11",
    "prisma-client-lib": "^1.30.2"
  },
  "devDependencies": {
    "casual": "^1.6.0",
    "dotenv": "^7.0.0",
    "eslint": "^5.16.0",
    "eslint-config-prettier": "^4.2.0",
    "eslint-plugin-jest": "^22.5.1",
    "eslint-plugin-prettier": "^3.0.0",
    "eslint-plugin-security": "^1.4.0",
    "graphql": "^14.2.1",
    "graphql-import": "^0.7.1",
    "jest": "^24.7.1",
    "nodemon": "^1.18.11",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.17.0"
  },
  "prettier": {
    "semi": false,
    "printWidth": 120,
    "singleQuote": true
  },
  "jest": {
    "coveragePathIgnorePatterns": [
      "<rootDir>/test",
      "<rootDir>/config"
    ]
  }
}

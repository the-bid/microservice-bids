{
  "name": "the-bid-bids",
  "version": "0.1.0",
  "description": "This is a microservice accociated with The Bid that handles bids",
  "main": "index.js",
  "scripts": {
    "lint": "eslint . --fix --ignore-path .gitignore --ignore-pattern '!.eslintrc.js'",
    "test": "npm run lint && npm run unit",
    "unit": "jest",
    "coverage": "jest --coverage",
    "start": "nodemon -r dotenv/config src/index.js",
    "start:dev": "npm-run-all -pl start playground ",
    "start:prod": "node src/index.js",
    "deploy:db": "prisma deploy -e .env",
    "start:db": "docker-compose -f deployment/docker-compose.yml up -d",
    "stop:db": "docker-compose -f deployment/docker-compose.yml stop",
    "playground": "graphql playground --port 3004"
  },
  "author": "bialesdaniel@gmail.com",
  "license": "MIT",
  "dependencies": {
    "graphql-yoga": "^1.17.4",
    "jsonwebtoken": "^8.4.0",
    "lodash": "^4.17.11",
    "prisma-binding": "^2.3.2",
    "prisma-client-lib": "^1.26.6"
  },
  "devDependencies": {
    "casual": "^1.6.0",
    "dotenv": "^6.2.0",
    "eslint": "^4.19.1",
    "eslint-config-prettier": "^2.10.0",
    "eslint-plugin-jest": "^22.0.0",
    "eslint-plugin-prettier": "^3.0.0",
    "eslint-plugin-security": "^1.4.0",
    "graphql": "^14.0.0",
    "graphql-import": "^0.6.0",
    "jest": "^24.0.0",
    "nodemon": "^1.18.10",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.16.4"
  },
  "prettier": {
    "semi": false,
    "printWidth": 120,
    "singleQuote": true
  },
  "jest": {
    "coveragePathIgnorePatterns": [
      "<rootDir>/test",
      "<rootDir>/config"
    ]
  }
}
